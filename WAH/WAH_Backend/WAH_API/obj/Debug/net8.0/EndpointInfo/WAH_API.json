{
  "openapi": "3.0.1",
  "info": {
    "title": "WAH_API",
    "version": "1.0"
  },
  "paths": {
    "/api/User/login": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/forgot-password": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotPasswordDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotPasswordDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotPasswordDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/reset-password": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Token": {
                    "type": "string"
                  },
                  "NewPassword": {
                    "type": "string"
                  },
                  "ConfirmPassword": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "Token": {
                  "style": "form"
                },
                "NewPassword": {
                  "style": "form"
                },
                "ConfirmPassword": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/register": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/upload/{userId}": {
      "post": {
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "File"
                ],
                "type": "object",
                "properties": {
                  "UserId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "File": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "UserId": {
                  "style": "form"
                },
                "File": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/otp-verify": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Email": {
                    "type": "string"
                  },
                  "Otp": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "Email": {
                  "style": "form"
                },
                "Otp": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ForgotPasswordDto": {
        "required": [
          "Email"
        ],
        "type": "object",
        "properties": {
          "Email": {
            "maxLength": 100,
            "minLength": 1,
            "pattern": "^(?=.*@)(?=.*\\.).+$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Gender": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "LoginDto": {
        "required": [
          "Email",
          "Password"
        ],
        "type": "object",
        "properties": {
          "Email": {
            "maxLength": 100,
            "minLength": 1,
            "pattern": "^(?=.*@)(?=.*\\.).+$",
            "type": "string"
          },
          "Password": {
            "maxLength": 100,
            "minLength": 6,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[\\W_]).{6,100}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "required": [
          "ConfirmPassword",
          "DOB",
          "Email",
          "FirstName",
          "Gender",
          "LastName",
          "Password",
          "PhoneNumber",
          "RoleId"
        ],
        "type": "object",
        "properties": {
          "FirstName": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "LastName": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "Email": {
            "maxLength": 100,
            "minLength": 1,
            "pattern": "^(?=.*@)(?=.*\\.).+$",
            "type": "string"
          },
          "PhoneNumber": {
            "minLength": 1,
            "pattern": "^\\d{10}$",
            "type": "string"
          },
          "Password": {
            "maxLength": 100,
            "minLength": 6,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[\\W_]).{6,100}$",
            "type": "string"
          },
          "ConfirmPassword": {
            "maxLength": 100,
            "minLength": 6,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[\\W_]).{6,100}$",
            "type": "string"
          },
          "Gender": {
            "$ref": "#/components/schemas/Gender"
          },
          "DeskNo": {
            "maxLength": 20,
            "type": "string",
            "nullable": true
          },
          "RoleId": {
            "type": "string",
            "format": "uuid"
          },
          "DOB": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      }
    }
  }
}